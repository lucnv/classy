<% content_for :edit_password_activation, "active" %>
<div class="card user-setting-group">
  <div class="section-title-line">
    <h5><%= t ".edit_password" %></h5>
    <hr class="filler-line">
  </div>
  <div class="card-block">
    <div class="row">
      <div class="col-md-12 col-lg-12">
        <%= form_for @user, url: my_page_password_path do |f| %>
          <div class="form-group row">
            <%= f.label :password, User.human_attribute_name(:password),
              class: "col-md-3 col-form-label text-right" %>
            <div class="col-md-6">
              <%= f.text_field :password, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation),
              class: "col-md-3 col-form-label text-right" %>
            <div class="col-md-6">
              <%= f.text_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :current_password, User.human_attribute_name(:current_password),
              class: "col-md-3 col-form-label text-right" %>
            <div class="col-md-6">
              <%= f.password_field :current_password, class: "form-control" %>
            </div>
          </div>
          <hr/>
          <div class="form-group row">
            <div class="col-md-6 offset-md-3">
              <%= f.submit class: "btn btn-default mr-2" %>
              <a class="btn btn-gray" href="/users/member1">Cancel</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
