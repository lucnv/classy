<h2><%= t ".edit_account_information" %></h2>

<%= form_for @user, url: my_page_account_path do |f| %>
  <div class="field">
    <%= f.label :username, User.human_attribute_name(:username) %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email, User.human_attribute_name(:email) %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :current_password, User.human_attribute_name(:current_password) %><br />
    <%= f.password_field :current_password %>
  </div>

  <div class="actions">
    <%= f.submit t(".update") %>
    <%= link_to t(".cancel"), user_path(@user), class: "btn btn-default" %>
  </div>
<% end %>
