<div class="row">
  <div class="col-lg-3 col-md-3">
    <%= render "search_control", search_form: @search_form %>
  </div>
  <div class="col-lg-9 col-md-9 pl-3">
    <div class="sort-options">
      <div class="collap-filter-nav">
        <ul class="filter-nav mb-0 pl-0 text-center">
          <%= render partial: "sort_option", collection: Center::SORT_OPTIONS, as: :option,
            locals: {search_form: @search_form} %>
        </ul>
      </div>
    </div>
    <section class="centers-list" id="center_search_result">
      <%= render "search_results", centers: @search.centers, search_form: @search_form %>
    </section>
    <div id="center_pagination">
      <%= paginate @search.centers, remote: true %>
    </div>
  </div>
</div>
