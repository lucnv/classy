<%= link_to t(".new_course"), new_management_course_path %>
<table class="table">
  <thead>
    <th><%= t ".index" %></th>
    <th><%= Course.human_attribute_name :name %></th>
    <th><%= Course.human_attribute_name :category %></th>
    <th><%= Course.human_attribute_name :duration %></th>
    <th><%= Course.human_attribute_name :tuition_fee %></th>
    <th><%= t ".action" %></th>
  </thead>
  <tbody>
    <%= render partial: :course, collection: @courses, as: :course %>
  </tbody>
</table>
