<div class="form-group row">
  <%= f.label :name, Course.human_attribute_name(:name),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :category_id, Course.human_attribute_name(:category),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.select :category_id, support.course_category_options,
      {include_blank: t(".select_course_category")},
      class: "course_category_selection form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :tmp_course_sub_category_ids, Course.human_attribute_name(:course_sub_categories),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.select :tmp_course_sub_category_ids, support.course_sub_category_options, {},
      multiple: true, class: "select2_course_sub_categories form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :intended_student, Course.human_attribute_name(:intended_student),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.text_area :intended_student, class: "form-control", rows: 5 %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :target, Course.human_attribute_name(:target),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.text_area :target, class: "form-control", rows: 5 %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :sessions, Course.human_attribute_name(:sessions),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-4">
    <%= f.number_field :sessions, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :duration, Course.human_attribute_name(:duration),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-4">
    <%= f.text_field :duration, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :class_size, Course.human_attribute_name(:class_size),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-4">
    <%= f.number_field :class_size, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :curriculum, Course.human_attribute_name(:curriculum),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.text_area :curriculum, class: "form-control", rows: 5 %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :teaching_methods, Course.human_attribute_name(:teaching_methods),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-8">
    <%= f.text_area :teaching_methods, class: "form-control", rows: 5 %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :tuition_fee, Course.human_attribute_name(:tuition_fee),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-4">
    <%= f.number_field :tuition_fee, class: "form-control" %>
  </div>
</div>
<hr/>
<div class="form-group row">
  <div class="col-md-8 offset-md-3">
    <%= f.submit "Lưu", class: "btn btn-default mr-2" %>
    <%= link_to "Hủy", management_branches_path, class: "btn btn-gray" %>
  </div>
</div>
