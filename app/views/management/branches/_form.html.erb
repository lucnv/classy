<div class="form-group row">
  <%= f.label :name, Branch.human_attribute_name(:name),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :city_id, Branch.human_attribute_name(:city),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.select :city_id, @support.city_options, {include_blank: t(".select_city")},
      class: "city_selection form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :district_id, Branch.human_attribute_name(:district),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.select :district_id, @support.district_options, {include_blank: t(".select_district")},
      class: "district_selection form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :address, Branch.human_attribute_name(:address),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :phone_number, Branch.human_attribute_name(:phone_number),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= f.label :email, Branch.human_attribute_name(:email),
    class: "col-md-3 col-form-label text-right" %>
  <div class="col-md-6">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>
<hr/>
<div class="form-group row">
  <div class="col-md-6 offset-md-3">
    <%= f.submit "Lưu", class: "btn btn-default mr-2" %>
    <%= link_to "Hủy", management_branches_path, class: "btn btn-gray" %>
  </div>
</div>
