<%= form_for [:management, @center] do |f| %>
  <div class="form-group">
    <%= f.label :logo, Center.human_attribute_name(:logo) %>
    <%= f.file_field :logo %>
    <%= f.hidden_field :logo_cache %>
  </div>

    <div class="form-group">
    <%= f.label :avatar, Center.human_attribute_name(:avatar) %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="form-group">
    <%= f.label :name, Center.human_attribute_name(:name) %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, Center.human_attribute_name(:center_category) %>
    <%= f.select :category_id, @support.center_category_options, 
      {include_blank: t(".select_center_category")} %>
  </div>

  <div class="form-group">
    <%= f.label :description, Center.human_attribute_name(:description) %>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :email, Center.human_attribute_name(:email) %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number, Center.human_attribute_name(:phone_number) %>
    <%= f.text_field :phone_number %>
  </div>

  <%= f.button t(".preview"), type: :submit, name: :step, value: :preview %>
<% end %>
