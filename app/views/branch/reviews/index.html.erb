<%= link_to new_branch_review_path(@branch) do %>
  <button type="button" class="btn btn-primary"><%= t ".new_review" %></button>
<% end %>
<hr/>
<%= form_for @q, url: branch_reviews_path(@branch), method: :get, remote: true do |f| %>
  <%= f.select :sorts, review_sorting_options %>
  <%= f.submit t(".filter")%>
<% end %>
<div id="review-list">
  <%= render partial: "shared/reviews/review", collection: @reviews, as: :review %>
</div>
