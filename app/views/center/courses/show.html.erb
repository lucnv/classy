<% content_for :center_courses_activation, "active" %>
<div class="col-md-10 white-bg py-3">
  <h3><%= @course.name %></h3>
  <div class="separator-2"></div>
  <div>
    <strong><%= Course.human_attribute_name :course_category %></strong>
    <%= @course.decorate.full_categories %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :intended_student %></strong><br/>
    <%= custom_simple_format @course.intended_student %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :target %></strong><br/>
    <%= custom_simple_format @course.target %>
  </div>
  <hr/>
  <div>
    <strong>Thời lượng học</strong>
    <%= number_with_precision @course.decorate.full_duration, strip_insignificant_zeros: true %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :class_size %></strong>
    <%= @course.class_size %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :curriculum %></strong><br/>
    <%= custom_simple_format @course.curriculum %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :teaching_methods %></strong><br/>
    <%= custom_simple_format @course.teaching_methods %>
  </div>
  <hr/>
  <div>
    <strong><%= Course.human_attribute_name :tuition_fee %></strong>
    <%= currency_format @course.tuition_fee %>
  </div>
  <hr/>
</div>
