<!DOCTYPE html>
<html>
  <%= render "layouts/shared/head" %>

  <body class="front-page wide">
    <div class="scrollToTop circle"><i class="icon-up-open-big"></i></div>
    <div class="page-wrapper">
      <%= render "layouts/shared/header" %>

      <section class="pv-30 grey-bg clearfix">
        <div class="container">
          <div id="flash-messages">
            <%= render "layouts/shared/flash" %>
          </div>
          <%= render "layouts/center/center_details", center: @center,
            avarage_rating: @center_avarage_rating %>
          <div class="row mt-4">
            <%= render "layouts/center/center_side_bar", center: @center %>
            <%= yield %>
          </div>
        </div>
      </section>

      <%= render "layouts/shared/footer" %>
    </div>
  </body>
</html>
