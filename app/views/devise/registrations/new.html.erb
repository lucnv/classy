<div class="row mx-auto">
  <div class="form form-sm mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="text-center mb-3">
          <span class="form-title">Đăng ký</span>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: {class: "new_user form"}) do |f| %>
          <div class="input-group input-inline">
            <div class="input-group-addon">
              <span class="fa fa-user"></span>
            </div>
            <%= f.text_field :first_name, autofocus: true, class: "form-control first",
              placeholder: "Tên" %>
            <%= f.text_field :last_name, class: "form-control second", placeholder: "Họ" %>
          </div>
          <div class="input-group">
            <div class="input-group-addon">
              <span class="fa fa-envelope"></span>
            </div>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="input-group">
            <div class="input-group-addon">
              <span class="fa fa-lock"></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Mật khẩu",
              class: "form-control" %>
          </div>
          <div class="input-group">
            <div class="input-group-addon">
              <span class="fa fa-lock"></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control", placeholder: "Nhập lại mật khẩu" %>
          </div>
          <div class="actions my-3 pt-1">
            <%= f.submit "Đăng ký", class: "btn btn-default btn-block" %>
          </div>
        <% end %>
        <p class="d-flex justify-content-center mb-0">
          Hoặc đăng nhập bằng:
        </p>
        <div class="row d-flex justify-content-center">
          <ul class="social-links colored square my-2">
            <li class="facebook">
              <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
                <i class="fa fa-facebook"></i>
              <% end %>
            </li>
            <li class="googleplus">
              <%= link_to omniauth_authorize_path(resource_name, :google_oauth2) do %>
                <i class="fa fa-google-plus"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <div class="">
        <p class="text-right">
          Đã có tài khoản?
          <a href="/users/sign_in">Đăng nhập</a><br>
          <a href="/users/confirmation/new">Không nhận được email xác thực?</a><br>
        </p>
      </div>
    </div>
  </div>
</div>
